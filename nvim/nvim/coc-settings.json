{
  "suggest.noselect": true,
  "yaml.enable": true,
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "kubernetes": [
      "/*.yaml"
    ]
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.work",
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  }
}
